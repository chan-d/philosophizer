<div class='col-md-6 col-md-offset-3 container'><%= link_to "New Post", '/blog/new', class: 'btn btn-info' %></div>

<div class='col-md-6 col-md-offset-3 container'>

  <% @blog.each do |blog| %>
  <div class='panel panel-info'>
    <div class="panel-heading">
      <%= blog.title %></div>
    <div class="panel-body">
      <p><%=  blog.post %></p>
    </div>
    <div class="panel-footer">
      <%= button_to "Edit Post", edit_blog_path(blog.id), method: :get, class: "btn btn-warning" %>
      <%= button_to "Delete Post", delete_blog_path(blog.id), method: :get, class: "btn btn-warning" %>
    </div>    
  </div>
  <% end %>
</div>
