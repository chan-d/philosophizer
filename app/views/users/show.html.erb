
<div class="col-md-6 col-md-offset-3 container">

  <div class='panel panel-default'>
    <div class="panel-heading"> Profile
    </div>
    <div class="panel-body">
      <%= current_user.name %>
      <br />
      <%= current_user.email %>
      <br />
      <%= link_to "New Post", '/blog/new', class: 'btn btn-info' %>
    </div>
  </div>
</div>


<div class="container">
  <div class='col-md-6 col-md-offset-3 container'></div>

  <div class='col-md-6 col-md-offset-3 container'>

    <% @blog.each do |blog| %>
    <div class='panel panel-default'>
      <div class="panel-heading">
        <%= blog.title %></div>
      <div class="panel-body">
        <p><%=  blog.post %></p>
      </div>
      <div class="panel-footer">
        <%= button_to "Edit Post", edit_blog_path(blog.id), method: :get, class: "btn btn-warning" %>
        <%= button_to "Delete Post", delete_blog_path(blog.id), method: :get, class: "btn btn-warning" %>
      </div>
    </div>
    <% end %>
  </div>

</div>
