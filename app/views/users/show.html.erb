<div class="col-md-6 col-md-offset-3 container">

  <div class='panel panel-default'>
    <div class="panel-heading">
      Profile
    </div>
    <div class="panel-body">
      <div class="col-md-3 profile">
        <img src='http://placehold.it/200x200&text=image+placeholder' />
      </div>
      <div class="col-md-6 col-md-offset-2 profile">
        <strong>Name:
        </strong>
        <%= current_user.name %>
        <br/>
        <strong>Email:</strong>
        <%= current_user.email %>
        <br/>
        <strong>Username:</strong>
        <%= current_user.username %>
        <br/>
        <strong>Date joined:</strong>
        <%= current_user.created_at.strftime("%B %-d, %Y") %>
        <hr />
        <strong>About me:</strong>
        <br />
        <%= current_user.description %>
      </div>
    </div>
    <div class="panel-footer">
      <%= link_to "New Post", '/blog/new', class: 'btn btn-info' %>
      <%= link_to "Edit Profile", edit_user_path(current_user.id), class: 'btn btn-warning', 'data-target' => "#myModal_#{current_user.id}", 'data-toggle' => 'modal'  %>
    </div>
  </div>
</div>



<div class="modal fade" id='<%= "myModal_#{current_user.id}" %>' tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit Profile</h4>
      </div>
      <div class="modal-body">
        <%= render 'users/form', user: current_user %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<div class="container">
  <div class='col-md-6 col-md-offset-3'>

    <% @blog.each do |blog| %>
    <div class='panel panel-default'>
      <div class="panel-heading">
        <%= blog.created_at.strftime("%B %-d, %Y") %></div>

      <div class="panel-body">
        <p>
          <strong>Title:
          </strong><%= blog.title %></p><hr/>
        <p>
          <strong>Post:
          </strong><%=  blog.post %></p>
      </div>
      <div class="panel-footer">
        <%= button_to "Edit Post", edit_blog_path(blog.id), method: :get, class: "btn btn-warning" %>
        <%= button_to "Delete Post", delete_blog_path(blog.id), method: :get, class: "btn btn-warning" %>
      </div>
    </div>
    <% end %>
  </div>

</div>
