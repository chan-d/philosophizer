<div class='col-sm-6 col-md-offset-3'>
  <div class='post_container'>
    <h1>Blog posts</h1>

    <div class='panel panel-default'>
      <div class='panel-body'>
        <p>
          This blog was created! I hope you enjoy!</p>
      </div>
    </div>

  </div>

  <div class='post_container'>
    <% @blogs.each do |blog| %>
    <div class='panel panel-default'>
      <div class='panel-heading'><%= blog.user.username %></div>

      <div class='panel-body'>
        <h2><%= blog.title %></h2><hr/>
        <strong>Date Created:</strong>
        <%= blog.created_at.strftime("%B %-d, %Y") %>
        <p><%= blog.post %></p>

      </div>

    </div>
    <br>
    <% end %>
  </div>
</div>
